FROM openjdk:14-jdk-alpine
MAINTAINER Kotov Svyatoslav
ADD /build/libs/auth-service-0.0.1-SNAPSHOT.jar auth-module.jar
ENV SERVER_PORT=8082

ENV SPRING_DATASOURCE_URL=postgresql://192.168.99.100:5432/auth_module
ENV SPRING_DATASOURCE_USERNAME=postgres
ENV SPRING_DATASOURCE_PASSWORD=postgres

ENV JWT_HEADER=Authorization
ENV JWT_SECRET=secretKey

ENV SPRING_RABBITMQ_HOST=192.168.99.100
ENV SPRING_RABBITMQ_PORT=5672
ENV SPRING_RABBITMQ_USERNAME=root
ENV SPRING_RABBITMQ_PASSWORD=root
ENTRYPOINT java -jar /auth-module.jar